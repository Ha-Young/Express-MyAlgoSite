{
  "type": "module",
  "name": "server",
  "version": "1.0.0",
  "prviate": true,
  "scripts": {
    "start": "node --experimental-modules --es-module-specifier-resolution=node ./bin/www",
    "dev": "nodemon --experimental-modules --es-module-specifier-resolution=node ./bin/www"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "extends": "airbnb-base",
    "rules": {
      "no-plusplus": 0,
      "linebreak-style": 0,
      "object-curly-newline": 0,
      "array-bracket-spacing": 0,
      "implicit-arrow-linebreak": 0,
      "no-new": 0,
      "consistent-return": 0,
      "no-restricted-globals": 0,
      "no-console": 0,
      "no-use-before-define": 0,
      "import/first": 0,
      "import/prefer-default-export": 0,
      "no-new-func": 0,
      "quotes": [
        "error",
        "single"
      ],
      "comma-dangle": [
        "error",
        "never"
      ],
      "semi": [
        "error",
        "always"
      ],
      "eol-last": [
        "error",
        "always"
      ],
      "arrow-parens": [
        "error",
        "as-needed"
      ],
      "indent": [
        "error",
        2,
        {
          "SwitchCase": 1
        }
      ],
      "no-multiple-empty-lines": [
        "error",
        {
          "max": 1
        }
      ]
    },
    "env": {
      "node": true,
      "browser": true
    }
  },
  "dependencies": {
    "codemirror": "^5.52.0",
    "connect-mongo": "^3.2.0",
    "cookie-parser": "^1.4.4",
    "debug": "~2.6.9",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-session": "^1.17.0",
    "helmet": "^3.21.3",
    "hpp": "^0.2.3",
    "http-errors": "^1.7.3",
    "joi": "^14.3.1",
    "mongoose": "^5.9.3",
    "morgan": "^1.9.1",
    "passport": "^0.4.1",
    "passport-github": "^1.1.0",
    "passport-local": "^1.0.0",
    "passport-local-mongoose": "^6.0.1",
    "pug": "^2.0.4",
    "serve-favicon": "~2.4.5"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.20.1",
    "nodemon": "^2.0.2"
  }
}
