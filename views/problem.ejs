<%# views/problem.ejs %>
<% extend('layout') %>
<% include ./header %>

<div class='solution-container'>
  <h2 class='solution-title'><%= problem.title %></h2>
  <div class='solution-sub-info'>
    <span>🎖Level <%= problem.difficulty_level %></span>
    <span>🙆‍♀️Completed Users <%= problem.completed_users.length %></span>
  </div>
  <p class='solution-description'><%= problem.description %></p>
  <form action='/problems/<%= problem._id %>' method='POST'>
    <textarea name='solution' id='code'></textarea>
    <button type='submit' class='submit-button'>Attempt</button>
  </form>
</div>

<script src='/codemirror/lib/codemirror.js'></script>
<script src='/codemirror/mode/javascript.js'></script>
<script src='/javascripts/code.js'></script>
