<html>
  <head>
    <title><%=title %></title>
    <link rel='stylesheet' href='/stylesheets/login.css' />
    <% include ./common/bootstrapCss.ejs  %>
  </head>
  <body>
    <div class="loginWindow">
      <h1><%=title %></h1>
      <form action="/join" method="post" class="form">
        <div class="form__text">
          <label class="form__title">email</label>
          <div class="form__input">
            <input type="email" name="email" class="form-control" id="floatingInput" placeholder="123456@mail.com" />
          </div>
        </div>
        <div class="form__text">
          <label class="form__title">password</label>
          <div class="form__input">
            <input type="password" name="password" class="form-control" placeholder="Password" />
          </div>
        </div>
        <div class="form__text">
          <label class="form__title">name</label>
          <div class="form__input">
            <input type="text" name="name" class="form-control" placeholder="Name" />
          </div>
        </div>
        <button type="submit" id="submitButton" class="btn btn-primary">Sign Up</button>
      </form>
    </div>
  </body>
  <% include ./common/bootstrapJs.ejs  %>
</html>
