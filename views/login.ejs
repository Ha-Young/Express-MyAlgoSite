<div class="login">
  <div class="login-form">
    <img class="logo" src="logo2.png" />
    <h1>Codewars</h1>
  
    <form method="post" action="/login">
      <p class="github-button">
        <a href="/login/github">
          Sign In with Github
          <i class="fab fa-github"></i>
        </a>
      </p>
  
      <div class="login-input-set">
        <p>
          <input class="login-input" type="text" name="username" placeholder="&#xf1d8; Username">
        </p>
        <p>
          <input class="login-input" type="password" name="password" placeholder="&#xf084; Password">
        </p>
      </div>
      <p>
        <input class="login-button" type="submit" value="Login">
      </p>
      <p class="join-button">
        <a href="/join">join</a>
      </p>
    </form>
  </div>
</div>
