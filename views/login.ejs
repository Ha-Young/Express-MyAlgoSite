<h1>Login</h1>
<%- message %>

<form method="post" action="/login">
  <p>
    <label>Username:</label>
    <input type="text" name="username">
  </p>
  <p>
    <label>Password:</label>
    <input type="text" name="password">
  </p>
  <p>
    <input type="submit" value="Login">
  </p>

  <a href="/login/github">Sign On with Github</a>
</form>
