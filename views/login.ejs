<h1><%= title %></h1>

<form action="/login" method="POST">
  <h2>Let's sign in!</h2>
  <div class="name">
    <label for="name">name</label>
    <input name="name" />
  </div>

  <div class="email">
    <label for="email">email</label>
    <input name="email" />
  </div>

  <div class="password">
    <label for="password">password</label>
    <input name="password" />
  </div> 

  <button type="submit">Submit</button>
</form>
