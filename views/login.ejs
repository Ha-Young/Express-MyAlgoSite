<!DOCTYPE html>
<html>
  <head>
    <title>codewar</title>
    <link rel="stylesheet" href="https://bootswatch.com/4/darkly/bootstrap.min.css" />
  </head>
  <body>
    <%- include ./partials/nav.ejs %>
    <%- include ./partials/bodyImage.js %>
    <div class="container">
      <h2 class="display-3">LOGIN</h2>
      <Form action="/auth/login" method="POST">
        <div class="form-group">
          <label for="email">Email</label>
          <input class="form-control" type="email" id="email" name="email" required>
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input class="form-control" type="password" id="password" name="password" required>
        </div>
        <% if (messages.error) { %>
          <div class="alert alert-dismissible alert-danger">
            <strong>
              <%= messages.error %>
            </strong>
          </div>
        <% } %>
        <button class="btn btn-primary submit">LOGIN</button>
      </Form>
      <br>
      <div class="alert alert-dismissible alert-info">
        <strong>If not a member?</strong> <a href="/auth/register">Register Here</a>
      </div>
      <button class="btn btn-success social_login-button">
        Log in with github
      </button>
    </div>
  </body>
</html>
