<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <title>Login</title>

</head>

<body>
  <div class="header">
    <!-- Use any element to open the sidenav -->
    <img class='side-menu-img' onmouseenter="openNav()" src="/images/codewars-sidebar.png" alt="codewars-sidebar">

    <ul class="horizontal-list">
      <% if (user) { %>
      <li><a href="/auth/logout">Logout</a></li>
      <% } else { %>
      <li><a href="/auth/login">Login</a></li>
      <% } %>
      <li><a href="/">Homepage</a></li>
      <li><img class='nav-thumb' src="<%= user.thumbnail %>" alt="user_thumbnail"><a href="/profile"><%= user.username %></a></li>
    </ul>
  </div>

  <div id="mySidenav" class="sidenav" onmouseleave="closeNav()">

    <!-- <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a> -->
    <a href="/">Home</a>
    <a href="/"><i class="fab fa-kickstarter-k"></i> Kata</a>
    <a href="/profile">Profile</a>
  </div>

  <header>
    <h1>Welcome to your profile, <%= user.username %></h1>
  </header>
  <main>
    <img src="<%= user.thumbnail %>" alt="user_thumbnail" />
    <p>
      extra information about you.
    </p>
  </main>

  <script>
    function openNav() {
      document.getElementById("mySidenav").style.width = "250px";
    }

    /* Set the width of the side navigation to 0 */
    function closeNav() {
      document.getElementById("mySidenav").style.width = "0";
    }

  </script>
  <script src="https://kit.fontawesome.com/3f39b7ae50.js" crossorigin="anonymous"></script>

</body>

</html>